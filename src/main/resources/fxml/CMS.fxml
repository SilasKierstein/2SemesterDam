         </ImageView>
      </center>
   </BorderPane>
     <ComboBox fx:id="imageSizeChoice" layoutX="14.0" layoutY="154.0" prefHeight="25.0" prefWidth="91.0" promptText="size" />
     <CheckBox fx:id="saleStickerCheckbox" layoutX="14.0" layoutY="188.0" prefHeight="25.0" prefWidth="91.0" text="sale sticker" />
     <TextField fx:id="imageIdField" layoutX="14.0" layoutY="35.0" prefHeight="25.0" prefWidth="125.0" promptText="Indtast ID..." />
     <Button layoutX="14.0" layoutY="116.0" onAction="#handleUploadAndTransformImage" text="Upload Image" />
