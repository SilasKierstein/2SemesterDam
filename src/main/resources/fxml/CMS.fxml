<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.presentation.controller.cms.CmsController">
   <BorderPane layoutX="154.0" layoutY="21.0" prefHeight="357.0" prefWidth="428.0" stylesheets="@../css/styles.css">
      <center>
         <ImageView fx:id="imageView" fitHeight="288.0" fitWidth="346.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
               <Image url="@../images/computer.jpg" />
