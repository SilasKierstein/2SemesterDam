<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="187.0" prefWidth="270.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button onAction="#handleSelectImage" text="Select Image" />
    <TextField fx:id="tagsField" alignment="CENTER" promptText="Enter tags, separated by commas" />
    <Button onAction="#handleUploadImage" text="Upload Image" />
</VBox>
